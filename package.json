{
  "name": "woven-web-app",
  "version": "1.0.0",
  "description": "Woven Map Report Generator + Raven Calder Chat Interface",
  "private": true,
  "engines": {
    "node": ">=18 <21",
    "npm": ">=9"
  },
  "scripts": {
    "build:css": "mkdir -p ./public/dist && tailwindcss -i ./src/input.css -o ./public/dist/output.css --minify",
    "build:offshoot": "tailwindcss -c tailwind.offshoot.config.js -i ./offshoot/offshoot.css -o ./offshoot/offshoot.min.css --minify",
    "dev:tailwind": "mkdir -p ./public/dist && tailwindcss -i ./src/input.css -o ./public/dist/output.css --watch",
    "check-env": "node -e \"if (!require('fs').existsSync('.env')) { console.error('Error: .env file not found. Copy .env.example to .env and configure your API keys.'); process.exit(1); } else { console.log('Environment file found.'); }\"",
    "dev": "next dev",
    "build": "npm run build:css && next build",
    "build:prod": "cross-env NODE_ENV=production next build",
    "start": "next start -p 3000",
    "start:prod": "cross-env NODE_ENV=production next start -p 3000",
    "env:required": "node scripts/check-env-required.js",
    "tinker": "node scripts/tinker-chat.js",
    "tinker:watch": "nodemon scripts/tinker-chat.js",
    "verify-copilot": "node verify-copilot-setup.js",
    "test": "node test/astrology-mathbrain.test.js",
    "test:smoke": "node test/smoke-tests.js",
    "test:endpoints": "node test/endpoint-health-check.js",
    "test:chat-guard": "node test/chat-guard.test.js",
    "test:raven-guard": "node test/raven-guard.test.js",
    "test:auth0": "node test/auth0-config-validator.js",
    "test:deployment": "node test/deployment-verification.js",
    "test:all": "node test/run-all-smoke-tests.js",
    "test:production": "node test/run-all-smoke-tests.js --environment=production",
    "test:ci": "vitest run && node test/run-all-smoke-tests.js --skip-network && npm run lexicon:lint",
    "test:vitest": "vitest",
    "test:vitest:ui": "vitest --ui",
    "test:vitest:run": "vitest run",
    "test:vitest:watch": "vitest --watch",
    "smoke-test": "npm run test:all",
    "smoke:golden": "node scripts/smoke-golden-case.js",
    "fix:auth0": "node scripts/fix-auth0.js",
    "smoke:auth0": "node scripts/smoke-auth0.js",
    "build:specs": "node specs/symbolic-weather-directive/build.js",
    "validate:specs": "node specs/symbolic-weather-directive/validate.js",
    "postinstall": "if [ -f package.json ] && node -e \"try{require('concurrently')}catch(e){process.exit(1)}\"; then echo 'concurrently already installed'; else echo 'Installing concurrently...'; npm i -D concurrently; fi",
    "auth:check": "node scripts/auth-config-check.js",
    "lexicon:lint": "node scripts/lexicon-lint.mjs"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "chart.js": "^4.5.0",
    "chartjs-plugin-annotation": "^3.1.0",
    "dompurify": "^3.2.7",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.12.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "jszip": "^3.10.1",
    "jwks-rsa": "^3.2.0",
    "luxon": "^3.7.2",
    "next": "14.2.32",
    "node-fetch": "^2.7.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.149",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tz-lookup": "^6.1.25",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@netlify/plugin-nextjs": "^5.13.2",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.3.5",
    "@types/node": "20.11.30",
    "@types/react": "18.2.79",
    "@types/uuid": "^9.0.7",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.0",
    "nodemon": "3.1.4",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.3",
    "ts-jest": "^29.4.4",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  }
}
