{
  "$id": "https://raven-calder/wm-chart-1.2.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["schema", "date", "seismograph", "meta"],
  "properties": {
    "schema": { "const": "WM-Chart-1.2" },
    "date": { "type": "string", "format": "date" },
    "seismograph": {
      "type": "object",
      "required": ["magnitude", "valence", "version"],
      "properties": {
        "magnitude": { "type": "number" },
        "valence": { "type": "number", "minimum": -5, "maximum": 5 },
        "version": { "const": "v1.0" }
      },
      "additionalProperties": false
    },
    "balance": {
      "type": "object",
      "required": ["magnitude", "valence", "version"],
      "properties": {
        "magnitude": { "type": "number" },
        "valence": { "type": "number", "minimum": -5, "maximum": 5 },
        "version": { "const": "v1.1" }
      },
      "additionalProperties": false
    },
    "sfd": {
      "type": "object",
      "required": ["sfd", "sPlus", "sMinus", "version"],
      "properties": {
        "sfd": { "type": "number", "minimum": -5, "maximum": 5 },
        "sPlus": { "type": "number", "minimum": 0, "maximum": 5 },
        "sMinus": { "type": "number", "minimum": 0, "maximum": 5 },
        "version": { "const": "v1.2" }
      },
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "required": ["calibration_boundary", "engine_versions", "reconstructed"],
      "properties": {
        "calibration_boundary": { "type": "string", "format": "date" },
        "engine_versions": {
          "type": "object",
          "properties": {
            "seismograph": { "const": "v1.0" },
            "balance": { "const": "v1.1" },
            "sfd": { "const": "v1.2" }
          },
          "additionalProperties": false
        },
        "reconstructed": { "type": "boolean" },
        "notes": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
