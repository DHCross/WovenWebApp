{
  "spec_version": "3.1",
  "scaling_mode": "absolute",
  "scale_factor": 50,
  "pipeline": "normalize→scale→clamp→round",
  "coherence_inversion": true,
  "ranges": {
    "magnitude": {
      "min": 0,
      "max": 5,
      "decimals": 1
    },
    "directional_bias": {
      "min": -5,
      "max": 5,
      "decimals": 1
    },
    "coherence": {
      "min": 0,
      "max": 5,
      "decimals": 1
    },
    "sfd": {
      "min": -1,
      "max": 1,
      "decimals": 2,
      "null_display": "n/a"
    }
  },
  "domain_logic": {
    "magnitude_amplification": {
      "base_weight": 0.8,
      "magnitude_coefficient": 0.4,
      "formula": "rawBias × (0.8 + 0.4 × magnitude)"
    },
    "bias_normalization_divisor": 100,
    "volatility_normalization_divisor": 100
  }
}
