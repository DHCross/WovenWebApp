{
  "compilerOptions": {
  "target": "es2018",
  "lib": ["es2018", "dom"],
    "module": "commonjs", // retain CommonJS to avoid breaking existing Netlify/serverless code
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true // Next.js handles its own build; use typecheck script for validation
  },
  "include": [
    "src/**/*.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "poetic-brain/src/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "poetic-brain/test/**/*",
    "poetic-brain/api/**/*"
  ]
}
